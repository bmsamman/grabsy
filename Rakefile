require 'rubygems'
require 'rake'
require 'echoe'

Echoe.new('grabsy', '0.1.0') do |s|
  s.description               = "Searches website for terms and emails results when a hit is found.  It also tracks past results and emails any new results.  In a way a monitoring system.  Great for Craigslist"
  s.url                       = "http://github.com/bmsamman/grabsy"
  s.author                    = "Bassel Samman"
  s.email                     = "mercedes6s@hotmail.com"
  s.ignore_pattern            = ["tmp/*", "script/*"]
  s.development_dependencies  = ["curb", "hpricot"]
  s.ignore_pattern            = ["*config*", "run_job.rb"]
end
